{
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "outDir": "./dist/types",
    "baseUrl": ".",
    "rootDir": "src",
    "jsx": "react-jsx",
    "emitDeclarationOnly": false,
    "paths": {
      "~*": ["./src/*"],
      "@infinite-images": ["../"]
    }
  },
  "references": [
    {
      "path": "../"
    }
  ]
}
