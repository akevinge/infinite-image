{
  "include": ["src"],
  "exclude": ["node_modules", "dist", "docs"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/types",
    "baseUrl": ".",
    "rootDir": "src",
    "jsx": "react-jsx",
    "paths": {
      "~*": ["./src/*"],
      "@infinite-images": ["../"]
    }
  },
  "references": [
    {
      "path": "../"
    }
  ],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  }
}
