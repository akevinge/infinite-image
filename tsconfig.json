{
  "include": ["src"],
  "compilerOptions": {
    "rootDir": "src",
    "target": "es6",
    "strict": true,
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "Node", // refer to: https://www.typescriptlang.org/docs/handbook/module-resolution.html
    "resolveJsonModule": true,
    "composite": true, // defaults to -- declaration: true, rootDir: "./", incremental: true
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext"],
    "jsx": "preserve",
    "outDir": "./dist/types",
    "paths": {
      "~*": ["./src/*"]
    }
  }
}
